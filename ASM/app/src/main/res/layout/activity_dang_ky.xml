<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangKyActivity"

    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng bạn ,"
        android:textStyle="bold"
        android:textColor="#0000FF"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký tài khoản"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/EdtUserName_Dk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Nhập tên người dùng"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/EdtPassword1_DK"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/EdtPassword2_Dk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        />

        <Button
            android:id="@+id/BtnDangKy_DK"
            android:backgroundTint="#0000FF"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="40dp"
            android:text="Đăng ký"/>

        <Button
            android:id="@+id/BtnTrove_DK"
            android:backgroundTint="#808080"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:text="Trở về"/>


</LinearLayout>