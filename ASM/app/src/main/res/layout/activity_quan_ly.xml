<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLyActivity"

    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ NHÂN SỰ"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="#00CC00"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPOLY SOFTWARE COMPANY"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:orientation="vertical"

            android:layout_marginTop="100dp"
            android:background="@drawable/bogoc"
            android:layout_marginLeft="70dp">

            <ImageView
                android:id="@+id/Img_CongTy"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_congty"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:text="Phòng ban"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:orientation="vertical"

            android:layout_marginTop="100dp"
            android:background="@drawable/bogoc"
            android:layout_marginLeft="50dp">

            <ImageView
                android:id="@+id/Img_NhanVien"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_nguoi"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:text="Nhân viên"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:orientation="vertical"

        android:layout_marginTop="50dp"
        android:background="@drawable/bogoc"
        android:layout_marginLeft="150dp">

        <ImageView
            android:id="@+id/Img_Thoat"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_thoat"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:text="Thoát"/>

    </LinearLayout>



</LinearLayout>