<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"

    android:orientation="horizontal"
    android:background="@drawable/bogoc1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TvMaNV"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="Mã Nhân viên : NV01 "/>

        <TextView
            android:id="@+id/TvTenNV"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="Họ và tên : Bùi Duy Anh"/>

        <TextView
            android:id="@+id/TvPhongBan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="Phòng ban : Đào tạo"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvXoaAdapter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Xóa"
        android:textStyle="bold"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="60dp"
        android:textSize="30sp"
        android:onClick="xoa"
        />

</LinearLayout>