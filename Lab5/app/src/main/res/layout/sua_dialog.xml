<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="380dp"
    android:padding="20dp"
    android:layout_height="500dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỬA THỜI GIAN BIỂU"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:background="#56a8af"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtTieuDeMoi"
        android:hint="Tiêu đề mới"
        android:textSize="25sp"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtNoiDungMoi"
        android:hint="Nội dung mới"
        android:textSize="25sp"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtThoiGianMoi"
        android:hint="Thời gian mới"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/btnSuaDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        />
</LinearLayout>